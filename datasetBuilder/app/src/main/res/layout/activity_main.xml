<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/name_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ask_enter_label"
        app:layout_constraintBottom_toTopOf="@id/button_label_chosen"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_label_chosen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_validate_label"
        app:layout_constraintTop_toBottomOf="@id/name_class"
        app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>