<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout"
    android:background="@drawable/background_image"
    android:alpha="0.6">

    <ImageView
        android:id="@+id/display_image_analysed"
        android:layout_width="match_parent"
        android:layout_height="0dp"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:background="@drawable/button_background"

        android:id="@+id/confirm_picture_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_picture"

        app:layout_constraintBottom_toTopOf="@+id/back_to_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/back_to_photo"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/button_background"
        android:text="@string/button_back_to_photo_text"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/back_to_start"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:background="@drawable/button_background"


        android:id="@+id/back_to_start"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:text="@string/button_back_to_start_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back_to_photo"
        app:layout_constraintTop_toBottomOf="@+id/confirm_picture_button" />

</android.support.constraint.ConstraintLayout>